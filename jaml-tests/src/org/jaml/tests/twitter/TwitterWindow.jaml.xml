<JFrame xmlns="http://java.com/namespaces/javax/swing" xmlns:j="http://java.com/namespaces/org/jaml/addons"
	xmlns:x="http://jaml.com/parser/2011/lang/additions"
	DefaultCloseOperation="javax.swing.JFrame.EXIT_ON_CLOSE" Size="800;600"
	Title="Twitter Sample Client">
	<j:Script x:Name="jScript" Extension="js" TargetType="java.awt.event.ActionListener"	
	Content="importClass(javax.swing.JOptionPane); function actionPerformed(event) { JOptionPane.showMessageDialog(null, 'Dynamic method called!', 'Test', JOptionPane.OK_CANCEL_OPTION); }"/>	
	<JPanel>
		<JList>
			<j:ObservableCollection x:Name="list" />
		</JList>
		<JButton x:Name="addButton" Text="Add" ActionListener="add_button" />
		<JButton x:Name="delButton" Text="Remove" ActionListener="del_button" />
		<JButton x:Name="testButton" Text="Test JavaScript" />
	</JPanel>
</JFrame>